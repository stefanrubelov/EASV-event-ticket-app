<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="easv.ticketapp.gui.PurchaseTicketController" fx:id="root">
    <VBox prefHeight="81.0" prefWidth="600.0" VBox.vgrow="NEVER">
        <Label fx:id="eventNameLbl" text="Event name" VBox.vgrow="ALWAYS">
            <font>
                <Font size="22.0" />
            </font>
        </Label>
        <Label fx:id="ticketDescriptionLbl" text="ticket description" VBox.vgrow="SOMETIMES">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
    </VBox>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
        <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
            <Label text="Recipient email" />
            <TextField styleClass="main-input" />
            <Label text="Recipient name">
                <VBox.margin>
                    <Insets top="20.0" />
                </VBox.margin>
            </Label>
            <TextField styleClass="main-input" />
            <Label text="Amount of tickets">
                <VBox.margin>
                    <Insets top="20.0" />
                </VBox.margin>
            </Label>
            <TextField styleClass="main-input" />
         <Button mnemonicParsing="false" onAction="#onBackButtonAction" styleClass="main-btn" text="Go back">
            <VBox.margin>
               <Insets top="30.0" />
            </VBox.margin>
         </Button>
        </VBox>
        <VBox alignment="TOP_RIGHT" prefHeight="200.0" prefWidth="100.0" spacing="20.0" HBox.hgrow="ALWAYS">
            <Button maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#handleEmailTicketAction" prefWidth="100.0" styleClass="main-btn" text="Send to email" />
            <Button maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#handlePrintTicketAction" prefWidth="100.0" styleClass="main-btn" text="Print (PDF)" />
            <Button maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#handlePreviewTicketAction" prefWidth="100.0" styleClass="main-btn" text="Preview" />
        </VBox>
    </HBox>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
