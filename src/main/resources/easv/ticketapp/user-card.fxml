<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="CENTER" minWidth="-Infinity" prefHeight="40.0" style="-fx-background-color: #ffffff;" styleClass="card-cell" stylesheets="@../../css/card.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="easv.ticketapp.gui.UserCardController">
    <children>
        <HBox alignment="CENTER" minWidth="150.0" prefWidth="1.0" styleClass="card-cell" HBox.hgrow="ALWAYS">
            <children>
                <Label fx:id="nameLbl" alignment="CENTER" contentDisplay="CENTER" minWidth="150.0" text="Silent Disco" wrapText="true" HBox.hgrow="ALWAYS" />
            </children>
         <HBox.margin>
            <Insets top="5.0" />
         </HBox.margin>
        </HBox>
        <HBox alignment="CENTER" minWidth="100.0" prefWidth="1.0" styleClass="card-cell" HBox.hgrow="ALWAYS">
            <children>
                <Label fx:id="emailLbl" alignment="CENTER" contentDisplay="CENTER" minWidth="100.0" text="05-02-2025" textAlignment="CENTER" wrapText="true" HBox.hgrow="ALWAYS" />
            </children>
         <HBox.margin>
            <Insets top="5.0" />
         </HBox.margin>
        </HBox>
        <HBox alignment="CENTER" minWidth="100.0" prefWidth="1.0" styleClass="card-cell" HBox.hgrow="ALWAYS">
            <children>
                <Label fx:id="createdAtLbl" alignment="CENTER" contentDisplay="CENTER" minWidth="100.0" text="EASV Bar" wrapText="true" HBox.hgrow="ALWAYS" />
            </children>
         <HBox.margin>
            <Insets top="5.0" />
         </HBox.margin>
        </HBox>
        <HBox alignment="CENTER" minWidth="120.0" spacing="10.0" HBox.hgrow="ALWAYS">
            <children>
<!--                <Button fx:id="editBtn" mnemonicParsing="false" onAction="#handleEditAction" styleClass="main-btn"-->
<!--                        text="Edit"/>-->
                <Button fx:id="deleteBtn" mnemonicParsing="false" onAction="#handleDeleteAction" text="Delete">
               <styleClass>
                  <String fx:value="main-btn" />
                  <String fx:value="main-btn-delete" />
               </styleClass></Button>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
         <HBox.margin>
            <Insets top="5.0" />
         </HBox.margin>
        </HBox>
    </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</HBox>
