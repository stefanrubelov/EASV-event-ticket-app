<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<HBox alignment="CENTER" minWidth="-Infinity" prefHeight="40.0" style="-fx-background-color: #ffffff;"
      stylesheets="@../../css/card.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="easv.ticketapp.gui.TicketCardController">
    <HBox alignment="CENTER" minWidth="80.0" prefWidth="1.0" styleClass="card-cell" HBox.hgrow="ALWAYS">
        <Label fx:id="priceLbl" alignment="CENTER" contentDisplay="CENTER" minWidth="80.0" text="100.0 dkk"
               wrapText="true" HBox.hgrow="ALWAYS"/>
    </HBox>
    <HBox alignment="CENTER" minWidth="250.0" prefWidth="1.0" styleClass="card-cell" HBox.hgrow="ALWAYS">
        <Label fx:id="descriptionLbl" alignment="CENTER" contentDisplay="CENTER" minWidth="250.0"
               text="something something" textAlignment="CENTER" wrapText="true" HBox.hgrow="ALWAYS"/>
    </HBox>
    <HBox alignment="CENTER" minWidth="100.0" prefWidth="1.0" styleClass="card-cell" HBox.hgrow="ALWAYS">
        <Label fx:id="ticketTypeLbl" alignment="CENTER" contentDisplay="CENTER" minWidth="100.0" text="Regular"
               wrapText="true" HBox.hgrow="ALWAYS"/>
    </HBox>
    <HBox alignment="CENTER" minWidth="120.0" spacing="10.0" HBox.hgrow="ALWAYS">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Button fx:id="purchaseBtn" mnemonicParsing="false" onAction="#handlePurchaseAction" styleClass="main-btn"
                text="Purchase">
            <styleClass>
                <String fx:value="main-btn"/>
                <String fx:value="main-btn-login"/>
            </styleClass>
        </Button>
        <Button fx:id="previewBtn" mnemonicParsing="false" onAction="#handlePreviewAction" styleClass="main-btn"
                text="Preview">
            <styleClass>
                <String fx:value="main-btn"/>
                <String fx:value="main-btn-login"/>
            </styleClass>
        </Button>
        <Button fx:id="deleteBtn" mnemonicParsing="false" onAction="#handleDeleteAction" styleClass="main-btn"
                text="Delete">
            <styleClass>
                <String fx:value="main-btn"/>
                <String fx:value="main-btn-delete"/>
            </styleClass>
        </Button>
    </HBox>
</HBox>
