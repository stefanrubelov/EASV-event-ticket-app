<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<VBox spacing="10.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="easv.ticketapp.gui.EventController">
    <opaqueInsets>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </opaqueInsets>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <HBox alignment="CENTER" minHeight="-Infinity" nodeOrientation="LEFT_TO_RIGHT" prefHeight="50.0" prefWidth="200.0" VBox.vgrow="NEVER">
            <padding>
                <Insets left="10.0" right="10.0" />
            </padding>
            <children>
                <Text fill="#464646" strokeType="OUTSIDE" strokeWidth="0.0" text="Events">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Text>
                <Region minWidth="-Infinity" HBox.hgrow="ALWAYS" />
            </children>
            <Button fx:id="createEventBtn" mnemonicParsing="false" onAction="#createEvent" styleClass="main-btn" text="Add event" />
        </HBox>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefWidth="700.0" VBox.vgrow="ALWAYS">
            <content>
                <VBox fx:id="eventContainer" minHeight="-Infinity" minWidth="-Infinity" spacing="6.0" />
            </content>
        </ScrollPane>
        <HBox alignment="CENTER" VBox.vgrow="SOMETIMES">
            <children>
                <Pagination fx:id="pagination" maxPageIndicatorCount="5" />
            </children>
        </HBox>
    </children>
</VBox>
